<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color:#f6f8ff;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MembersController">

    <top>
        <HBox spacing="10" style="-fx-background-color:white; -fx-border-color:#e8edff; -fx-border-width:0 0 1 0;">
            <children>
                <Button onAction="#handleBackToDashboard" style="-fx-background-color:#3f5fa8; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:8; -fx-padding:6 12;" text="←  Dashboard" />
                <Label style="-fx-text-fill:#3f5fa8; -fx-font-size:20px; -fx-font-weight:bold;" text="Members" />
            </children>
            <padding><Insets bottom="10" left="18" right="18" top="10" /></padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="14" style="-fx-padding:20;">
            <children>
            <HBox prefHeight="0.0" prefWidth="678.0" spacing="30.0">
               <children>
                  <TextField fx:id="textSearchFeild" prefHeight="42.0" prefWidth="177.0" promptText="Enter Member Name" />
                  <Button fx:id="searchbtn" mnemonicParsing="false" onAction="#handleSearchButton" style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 14; -fx-padding: 10 14;" text="Search" />
                  <Button fx:id="reserbtn" mnemonicParsing="false" onAction="#handleResetBtn" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 10;" text="RESET" />
                  <ComboBox fx:id="sortComboBox" prefHeight="39.0" prefWidth="150.0" promptText="SORT ME BY" />
               </children>
            </HBox>

                <GridPane hgap="12" style="-fx-background-color:white; -fx-background-radius:14; -fx-padding:16; -fx-border-color:#e8edff; -fx-border-radius:14;" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints minWidth="140" />
                        <ColumnConstraints minWidth="140" />
                    </columnConstraints>

                    <children>
                        <Label text="Name" />
                        <TextField fx:id="nameField" promptText="Full name" GridPane.columnIndex="1" />

                        <Label text="Contact" GridPane.rowIndex="1" />
                        <TextField fx:id="contactField" promptText="Phone (digits) or Email" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Button fx:id="addBtn" onAction="#handleAdd" style="-fx-background-color:#3f5fa8; -fx-text-fill:white; -fx-background-radius:8;" text="Add" GridPane.columnIndex="2" />
                        <Button fx:id="editBtn" onAction="#handleEdit" style="-fx-background-color:#3f5fa8; -fx-text-fill:white; -fx-background-radius:8;" text="Edit" GridPane.columnIndex="3" />
                        <Button fx:id="deleteBtn" onAction="#handleDelete" style="-fx-background-color:#ef5350; -fx-text-fill:white; -fx-background-radius:8;" text="Delete" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Button fx:id="clearBtn" onAction="#handleClear" style="-fx-background-color:#9aa7c1; -fx-text-fill:white; -fx-background-radius:8;" text="Clear" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    </children>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <TableView fx:id="table" prefHeight="480">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="80" text="ID" />
                        <TableColumn fx:id="nameCol" prefWidth="260" text="Name" />
                        <TableColumn fx:id="contactCol" prefWidth="320" text="Contact" />
                    </columns>
                </TableView>

            </children>
        </VBox>
    </center>
</BorderPane>
