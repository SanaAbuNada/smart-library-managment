<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="540.0" prefWidth="860.0" style="-fx-background-color:#f6f8ff;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BooksController">

    <children>
        <VBox spacing="16" AnchorPane.bottomAnchor="16" AnchorPane.leftAnchor="16" AnchorPane.rightAnchor="16" AnchorPane.topAnchor="16">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#handleBackToDashboard" style="-fx-background-color:#e7ecff; -fx-text-fill:#2f3f6e; -fx-background-radius:10;" text="← Dashboard" />
                <Label style="-fx-text-fill:#3f5fa8; -fx-font-size:20; -fx-font-weight:bold;" text="Book Management System" />
            </HBox>

            <VBox spacing="10" style="-fx-background-color:white; -fx-background-radius:16; -fx-border-radius:16; -fx-border-color:#e8edff;">
                <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

                <Label style="-fx-text-fill:#41506a; -fx-font-weight:bold; -fx-font-size:14;" text="Book Information" />
            <HBox prefHeight="0.0" prefWidth="678.0" spacing="30.0">
               <children>
                  <TextField fx:id="textSearchFeild" prefHeight="42.0" prefWidth="177.0" promptText="Enter Member ID or bookTitle" />
                  <Button fx:id="searchbtn" mnemonicParsing="false" onAction="#handleSearchButton" style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 14; -fx-padding: 10 14;" text="Search" />
                  <Button fx:id="reserbtn" mnemonicParsing="false" onAction="#handleResetBtn" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 10;" text="RESET" />
                  <ComboBox fx:id="sortComboBox" prefHeight="39.0" prefWidth="150.0" promptText="SORT ME BY" />
               </children>
            </HBox>

                <Label style="-fx-text-fill:#6a7896;" text="Title" />
                <TextField fx:id="titleField" promptText="Enter book title" style="-fx-background-radius:10; -fx-border-radius:10; -fx-border-color:#cfe0ff;" />

                <Label style="-fx-text-fill:#6a7896;" text="Author" />
                <TextField fx:id="authorField" promptText="Enter author name" style="-fx-background-radius:10; -fx-border-radius:10; -fx-border-color:#cfe0ff;" />

                <Label style="-fx-text-fill:#6a7896;" text="Status" />
                <ComboBox fx:id="statusCombo" promptText="Select status" style="-fx-background-radius:10; -fx-border-radius:10; -fx-border-color:#cfe0ff;" />

                <HBox spacing="8">
                    <Button fx:id="addBtn" onAction="#handleAdd" style="-fx-background-color:#2f5bd3; -fx-text-fill:white; -fx-background-radius:10;" text="Add Book" />
                    <Button fx:id="editBtn" onAction="#handleEdit" style="-fx-background-color:#3f5fa8; -fx-text-fill:white; -fx-background-radius:10;" text="Edit Book" />
                    <Button fx:id="deleteBtn" onAction="#handleDelete" style="-fx-background-color:#ef5350; -fx-text-fill:white; -fx-background-radius:10;" text="Delete" />
                </HBox>

                <Label style="-fx-text-fill:#9fb0d6; -fx-font-size:11;" text="Tip: Select a book in the table to edit or delete." />
            </VBox>

            <VBox spacing="8" style="-fx-background-color:white; -fx-background-radius:16; -fx-border-radius:16; -fx-border-color:#e8edff;">
                <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

                <Label style="-fx-text-fill:#41506a; -fx-font-weight:bold; -fx-font-size:14;" text="Book Collection" />

                <TableView fx:id="table" prefHeight="320" style="-fx-background-radius:10; -fx-border-radius:10; -fx-border-color:#eef3ff;">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="70" text="ID" />
                        <TableColumn fx:id="titleCol" prefWidth="240" text="Title" />
                        <TableColumn fx:id="authorCol" prefWidth="200" text="Author" />
                        <TableColumn fx:id="statusCol" prefWidth="140" text="Status" />
                    </columns>
                    <placeholder>
                        <Label style="-fx-text-fill:#9fb0d6;" text="No books yet" />
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
