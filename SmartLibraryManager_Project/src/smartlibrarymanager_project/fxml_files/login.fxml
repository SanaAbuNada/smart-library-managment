<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="1000" style="-fx-background-color: #f6f8ff;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController"
>

    <children>
        <VBox alignment="CENTER" spacing="18" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3f5fa8;" text="Smart Library Manager" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #8aa0c8;" text="Sign in to manage your library" />

            <VBox alignment="TOP_LEFT" maxWidth="520" prefHeight="296.0" prefWidth="367.0" spacing="16" style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 26; -fx-border-color: #e8edff; -fx-border-radius: 18;">

                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3f5fa8;" text="Welcome Back" />
                <Label style="-fx-font-size: 12.5px; -fx-text-fill: #98a7c6;" text="Enter your credentials to access the dashboard" />

                <VBox spacing="6">
                    <Label style="-fx-text-fill: #41506a;" text="Email Address" />
                    <TextField fx:id="emailField" promptText="name@example.com" style="-fx-background-radius: 10; -fx-border-color: #cfe0ff; -fx-border-radius: 10; -fx-padding: 10; -fx-text-fill: #2a2a2a; -fx-prompt-text-fill: #b5c7ef;" />
                </VBox>

                <VBox spacing="6">
                    <Label style="-fx-text-fill: #41506a;" text="Password" />
                    <PasswordField fx:id="passwordField" promptText="••••••••" style="-fx-background-radius: 10; -fx-border-color: #cfe0ff; -fx-border-radius: 10; -fx-padding: 10; -fx-text-fill: #2a2a2a; -fx-prompt-text-fill: #b5c7ef;" />
                </VBox>

                <Button fx:id="LoginButton" defaultButton="true" maxWidth="Infinity" onAction="#handleLogin" style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12;" text="Login" />

                <HBox alignment="CENTER" spacing="6">
                    <Label style="-fx-text-fill: #7c8db1;" text="Don't have an account?" />
                    <Hyperlink fx:id="createAccountLink" onAction="#goToSignUp" style="-fx-text-fill: #3f5fa8; -fx-font-weight: bold;" text="Create Account" />
                </HBox>
            </VBox>

            <Label style="-fx-text-fill: #9fb0d6; -fx-font-size: 11px;" text="Professional library management system" />
        </VBox>
    </children>
</AnchorPane>
