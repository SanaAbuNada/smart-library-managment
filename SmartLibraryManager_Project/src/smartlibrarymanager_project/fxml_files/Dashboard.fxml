<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>

<BorderPane prefHeight="720.0" prefWidth="1180.0"
            style="-fx-background-color: #f6f8ff;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DashboardController">

    <top>
        <HBox spacing="12.0"
              style="-fx-background-color: white; -fx-border-color: #e8edff; -fx-border-width: 0 0 1 0;"
              BorderPane.alignment="CENTER_LEFT">
            <children>
                <Label text="Smart Library" style="-fx-text-fill: #3f5fa8; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnSignOut" text="Sign Out" onAction="#handleSignOut"
                        style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 6 14 6 14;"/>
            </children>
            <padding><Insets top="10.0" right="18.0" bottom="10.0" left="18.0"/></padding>
        </HBox>
    </top>

    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="16.0"
                      AnchorPane.topAnchor="24.0" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="24.0">
                    <children>
                        <Label fx:id="welcomeLabel" text="Welcome, First Name!"
                               style="-fx-text-fill: #3f5fa8; -fx-font-size: 26px; -fx-font-weight: bold;"/>

                        <VBox alignment="TOP_LEFT" maxWidth="820.0" prefWidth="820.0" spacing="16.0"
                              style="-fx-background-color: white; -fx-border-color: #e8edff; -fx-border-radius: 18; -fx-background-radius: 18; -fx-padding: 22;">
                            <children>
                                <Label text="Quick Overview"
                                       style="-fx-text-fill: #41506a; -fx-font-weight: bold; -fx-font-size: 16px;"/>

                                <GridPane hgap="14.0" vgap="14.0">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints/>
                                    </rowConstraints>

                                    <children>
                                        <!-- Books -->
                                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="8.0"
                                              style="-fx-background-color: #f9fbff; -fx-border-color: #e8edff; -fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 12;">
                                            <children>
                                                <Label text="Books" style="-fx-text-fill: #41506a; -fx-font-weight: bold;"/>
                                                <Label text="Manage your book inventory" style="-fx-text-fill: #7c8db1; -fx-font-size: 12px;"/>
                                                <Button fx:id="openBooks" text="Open" onAction="#handleOpenBooks"
                                                        style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 6 12 6 12;"/>
                                            </children>
                                        </VBox>

                                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="8.0"
                                              style="-fx-background-color: #f9fbff; -fx-border-color: #e8edff; -fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 12;">
                                            <children>
                                                <Label text="Borrowing" style="-fx-text-fill: #41506a; -fx-font-weight: bold;"/>
                                                <Label text="Track borrowings and returns" style="-fx-text-fill: #7c8db1; -fx-font-size: 12px;"/>
                                                <Button fx:id="openBorrowing" text="Open" onAction="#handleOpenBorrowing"
                                                        style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 6 12 6 12;"/>
                                            </children>
                                        </VBox>

                                        <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="8.0"
                                              style="-fx-background-color: #f9fbff; -fx-border-color: #e8edff; -fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 12;">
                                            <children>
                                                <Label text="Members" style="-fx-text-fill: #41506a; -fx-font-weight: bold;"/>
                                                <Label text="Register and manage members" style="-fx-text-fill: #7c8db1; -fx-font-size: 12px;"/>
                                                <Button fx:id="openMembers" text="Open" onAction="#handleOpenMembers"
                                                        style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 6 12 6 12;"/>
                                            </children>
                                        </VBox>

                                        <VBox GridPane.columnIndex="3" GridPane.rowIndex="0" spacing="8.0"
                                              style="-fx-background-color: #f9fbff; -fx-border-color: #e8edff; -fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 12;">
                                            <children>
                                                <Label text="Reports" style="-fx-text-fill: #41506a; -fx-font-weight: bold;"/>
                                                <Label text="Generate library reports" style="-fx-text-fill: #7c8db1; -fx-font-size: 12px;"/>
                                                <Button fx:id="openReports" text="Open" onAction="#handleOpenReports"
                                                        style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 6 12 6 12;"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
