<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650" prefWidth="1000"
            style="-fx-background-color: #f6f8ff;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.SignUpController">

    <children>
        <VBox alignment="CENTER" spacing="18"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <VBox alignment="TOP_CENTER" maxWidth="520" prefWidth="520" spacing="20"
                  style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 28;
                         -fx-effect: dropshadow(gaussian, rgba(63,95,168,0.20), 18, 0.18, 0, 6);
                         -fx-border-color: #e8edff; -fx-border-radius: 18;">

                <Label alignment="CENTER" maxWidth="Infinity"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #3f5fa8; -fx-padding: 10;"
                       text="Create Account" />

                <VBox alignment="TOP_LEFT" maxWidth="Infinity" spacing="12">
                    <Label style="-fx-text-fill: #41506a;" text="First Name" />
                    <TextField fx:id="firstNameField" promptText="Enter first name"
                               style="-fx-background-radius: 10; -fx-border-color: #cfe0ff; -fx-border-radius: 10; -fx-padding: 10;" />

                    <Label style="-fx-text-fill: #41506a;" text="Last Name" />
                    <TextField fx:id="lastNameField" promptText="Enter last name"
                               style="-fx-background-radius: 10; -fx-border-color: #cfe0ff; -fx-border-radius: 10; -fx-padding: 10;" />

                    <Label style="-fx-text-fill: #41506a;" text="Email" />
                    <TextField fx:id="emailField" promptText="Enter email"
                               style="-fx-background-radius: 10; -fx-border-color: #cfe0ff; -fx-border-radius: 10; -fx-padding: 10;" />

                    <Label style="-fx-text-fill: #41506a;" text="Password" />
                    <PasswordField fx:id="passwordField" promptText="••••••••"
                                   style="-fx-background-radius: 10; -fx-border-color: #cfe0ff; -fx-border-radius: 10; -fx-padding: 10;" />

                    <Label style="-fx-text-fill: #41506a;" text="Confirm Password" />
                    <PasswordField fx:id="confirmPasswordField" promptText="••••••••"
                                   style="-fx-background-radius: 10; -fx-border-color: #cfe0ff; -fx-border-radius: 10; -fx-padding: 10;" />
                </VBox>

                <Button fx:id="signUpButton" text="Sign Up"
                        onAction="#handleSignUp"
                        defaultButton="true" maxWidth="Infinity"
                        style="-fx-background-color: #3f5fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12;"/>

                <HBox alignment="CENTER" spacing="6">
                    <Label style="-fx-text-fill: #7c8db1;" text="Already have an account?" />
                    <Hyperlink fx:id="signInLink" text="Sign In"
                               onAction="#goBackToLogin"
                               style="-fx-text-fill: #3f5fa8; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
